set nocompatible
syntax enable
colorscheme jc

set number  " Show line numbers
set ruler   " Show the line and column number of the cursor position,
    " separated by a comma.
set background=dark
filetype plugin indent on
set shiftwidth=4
set tabstop=4


inoremap  <Up>     <NOP>
inoremap  <Down>   <NOP>
inoremap  <Left>   <NOP>
inoremap  <Right>  <NOP>
noremap   <Up>     <NOP>
noremap   <Down>   <NOP>
noremap   <Left>   <NOP>
noremap   <Right>  <NOP>

source $HOME/.vim/vimrcs/settings.vimrc
source $HOME/.vim/vimrcs/commands.vimrc
