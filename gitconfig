[user]
  name = Tonko Mulder
  email = tonko@tonkomulder.nl

[core]
  pager = less -FRSX
  autocrlf = input
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore

[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto
  pager = true
  interactive = auto

[color "status"]
  added = green
  changed = yellow
  untracked = red

[diff]
  tool = meld

[difftool]
  prompt = false

[merge]
  ff = only

[alias]
  a  = add
  co = checkout
  ca = commit --amend
  ci = commit -S
  create-branch = !sh -c 'git push origin HEAD:refs/heads/$1 && git fetch origin && git branch --track $1 origin/$1 && cd . && git checkout $1' -
  delete-branch = !sh -c 'git push origin :refs/heads/$1 && git remote prune origin && git branch -D $1' -
  merge-branch = !git checkout master && git merge @{-1}
  l = log --pretty=format:'%h %G? %aN  %s'
  ll = log --graph --decorate --oneline 
  lll = log --graph --date-order -C -M --pretty=format:'<%h> %ad [%an] %Cgreen%d%Creset %s' --all --date=short
  ls = "!cd ${GIT_PREFIX:-`pwd`}; printf \"# HEAD: \"; git log --oneline | head -n1; git status"
  ignored = !git ls-files -v | grep "^[[:lower:]]"
  st = status
  up = !git fetch origin && git rebase origin/master
  pu = !git fetch origin && git fetch upstream && git rebase upstream/master

[push]
    default = current
[hub]
  protocol = ssh
