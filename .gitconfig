[user]
	name = Tonko Mulder
	email = tonko@tonkomulder.nl
[core]
  pager = less -r
  autocrlf = false

[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[diff]
	tool = meld

[alias]
	st = status
	b = branch
	ba = branch -a
	co = checkout
	l = log --decorate --oneline
	spull = svn rebase
	spush = svn dcommit

[giggle]
	main-window-maximized = true
	main-window-geometry = 0x0+0+0
	history-view-vpane-position = 191
	file-view-vpane-position = 916
	main-window-view = HistoryView
	file-view-hpane-position = 317
